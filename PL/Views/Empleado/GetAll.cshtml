@model ML.Empleado
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Empleados</h2>
<hr />
<div>
    <p>Agrega un nuevo empleado</p>
    <a class="btn btn-success" href="@Url.Action("Form", "Empleado")">Nuevo empleado</a>
</div>
<hr />
<div>
    @if (Model.Empleados != null)
    {
        if (Model.Empleados.Count > 0)
        {
            <div class="row">
                @foreach (ML.Empleado empleado in Model.Empleados)
                {
                    <div class="col-sm-6 mb-3 mb-sm-0">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">@empleado.Nombre @empleado.ApellidoPaterno @empleado.ApellidoMaterno</h5>
                                <p class="card-text">Fecha de ingreso: @empleado.FechaIngreso.ToShortDateString()</p>
                                <p class="card-text">Fecha de nacimiento: @empleado.FechaNacimiento.ToShortDateString()</p>
                                <a href="@Url.Action("Form", "Empleado", new {claveEmpleado = empleado.ClaveEmpleado})" class="btn btn-warning">Editar</a>
                                <a href="@Url.Action("Delete", "Empleado", new {claveEmpleado = empleado.ClaveEmpleado})" class="btn btn-danger">Eliminar</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div role="alert" class="alert alert-warning">No hay empleados registrados.</div>
        }
    }
</div>